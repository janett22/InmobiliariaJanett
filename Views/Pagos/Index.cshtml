@model IEnumerable<InmobiliariaJanett.Models.Pago>



<BR>

<a asp-action="Create" class="btn btn-primary" style="width:180px;">Crear nuevo pago<i class="fas fa-plus"> </i></a>

<br>
<br> 
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Inquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Inmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @(item.Contrato.Inquilino.Nombre + " " + item.Contrato.Inquilino.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrato.Inmueble.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td>
                
               
                <i class="fa fa-info-circle"></i>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdContrato }) |
                <i class="fa fa-info-circle"></i>
                @Html.ActionLink("Cancelar", "Delete", new { id = item.Id })  |
                <i class="fa fa-info-circle"></i>
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                <i class="fa fa-trash"></i>
            </td>
        </tr>
        }
    </tbody>
</table>



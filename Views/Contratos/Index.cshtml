@model IEnumerable<InmobiliariaJanett.Models.Contrato>


<h2>
    @ViewBag.Title
</h2>
<BR>

<form class="form-inline" asp-action="BuscarInmueblesPorFecha" asp-controller="Inmuebles">
    <div class="input-group mb-2 mr-sm-2">
        <label for="FechaInicio" class="control-label"></label>
        <input name="FechaInicio" type="date" class="form-control" required />
    </div>
    <div class="input-group mb-2 mr-sm-2">
        <label for="FechaFin" class="control-label"></label>
        <input name="FechaFin" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary" style="margin-bottom: 9px;">Inmuebles disponibles</button>
</form>
<form class="form-inline" asp-action="BuscarVigentes" asp-controller="Contratos">
    <div class="input-group mb-2 mr-sm-2">
        <label for="FechaInicio" class="control-label"></label>
        <input name="FechaInicio" type="date" class="form-control" required />
    </div>
    <div class="input-group mb-2 mr-sm-2">
        <label for="FechaFin" class="control-label"></label>
        <input name="FechaFin" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary" style="margin-bottom: 9px;">Contratos Vigentes</button>
</form>

<br>
<br>
<a asp-action="Create" class="btn btn-primary" style="width:180px;">Crear nuevo <i class="fas fa-plus"> </i></a>

<a asp-action="IndexPorInmueble" class="btn btn-primary" style="width:180px;">Ver Inmuebles <i class="fas fa-plus"> </i></a>

<br>
<br>
<table class="table">
    <thead class="thead-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inmueble.Direccion)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaInicio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaFin)
    </td>
    <td>
        @(item.Inquilino.Nombre + " " + item.Inquilino.Apellido)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Inmueble.Direccion)
    </td>
    <td>

        <i class="fa fa-history"></i>
        @Html.ActionLink("Ver pagos", "PorContrato", "Pagos", new { id = item.Id }) |
        <i class="fa fa-edit"></i>
        @Html.ActionLink("Pagar", "Create", "Pagos", new { id = item.Id }) |
        <i class="fa fa-info-circle"></i>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        <i class="fa fa-info-circle"></i>
        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
        <i class="fa fa-trash"></i>
        @Html.ActionLink("Cancelar", "Delete", new { id = item.Id })
    </td>
</tr>
}
    </tbody>
</table>
